<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.ernhofer.dezsys11_androidrestfulws"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <!-- Permission: Allow application to connect to Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="at.ernhofer.dezsys11_androidrestfulws.RegisterActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.ernhofer.dezsys11_androidrestfulws.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="at.ernhofer.dezsys11_androidrestfulws.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
    </application>

</manifest>